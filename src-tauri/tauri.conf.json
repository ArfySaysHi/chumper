{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chumper",
  "version": "0.1.0",
  "identifier": "com.arfy.chumper",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "chumper",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "backgroundColor": "#0c1117",
        "visible": true,
        "center": true,
        "theme": "Dark",
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
